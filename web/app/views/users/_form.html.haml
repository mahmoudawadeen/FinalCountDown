= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  %p
    =f.label :username
  %p
    =f.text_field :username

  %p
    =f.label :email
  %p
    =f.email_field :email

  %p
    =f.label :password
  %p
    =f.password_field :password
  %p
    =f.label :age
  %p
    =f.text_field :age
  %p
    =f.label :image_url
  %p
    =f.text_field :image_url
  .actions
    = f.submit 'Save'
